<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.andrick.mob.Menu"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:padding="5sp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Que voulez-vous faire?"
                android:id="@+id/textView2"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="45dp"
                android:background="@drawable/btn_blue" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:padding="1dp"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="161dp"
                    android:layout_height="fill_parent"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="RECHARGER"
                        android:id="@+id/recharge_m"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/btn_orange" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="161dp"
                    android:layout_height="fill_parent"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ACTIVER"
                        android:id="@+id/activation"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/btn_yello" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="162dp"
                    android:layout_height="fill_parent"
                    android:padding="1dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="110dp"
                        android:paddingBottom="1dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="VERIFIER"
                            android:id="@+id/verification"
                            android:paddingBottom="1dp"
                            android:textColor="#ffffff"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:background="@drawable/btn_green"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="36sp"
                            android:text="About"
                            android:id="@+id/abouts"
                            android:textColor="#ffffff"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:background="@drawable/btn_blue" /> 
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="162dp"
                    android:layout_height="fill_parent"
                    android:padding="1dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="URGENCE"
                            android:id="@+id/urgence"
                            android:background="@drawable/btn_red"
                            android:paddingBottom="1dp"
                            android:textColor="#ffffff"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="MONEY"
                            android:id="@+id/money"
                            android:background="@drawable/btn_green"
                            android:paddingBottom="1dp"
                            android:textColor="#ffffff"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:text="ENVOYER "
                            android:id="@+id/envoyer_men"
                            android:autoText="false"
                            android:background="@drawable/btn_black"
                            android:textColor="#ffffff"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textIsSelectable="false" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
